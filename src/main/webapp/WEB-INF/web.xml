<web-app xmlns="http://java.sun.com/xml/ns/javaee" version="2.5"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
  <display-name>Payments</display-name>

  <context-param>
    <param-name>javax.servlet.jsp.jstl.fmt.localizationContext</param-name>
    <param-value>resources</param-value>
  </context-param>

  <context-param>
    <param-name>javax.servlet.jsp.jstl.fmt.locale</param-name>
    <param-value>ru</param-value>
  </context-param>

  <!-- supported locales -->
  <context-param>
    <param-name>locales</param-name>
    <param-value>ru en</param-value>
  </context-param>

  <filter>
    <filter-name>SecurityFilter</filter-name>
    <filter-class>com.stupak.payments.controller.filter.SecurityFilter</filter-class>
    <init-param>
      <param-name>admin</param-name>
      <param-value>main users services registration edit_client profile add_tariff edit_tariff remove_tariff</param-value>
    </init-param>
    <init-param>
      <param-name>client</param-name>
      <param-value>account personal_data user_profile transactions save_profile</param-value>
    </init-param>
    <init-param>
      <param-name>common</param-name>
      <param-value>pdf_builder logout redirect no_command</param-value>
    </init-param>
    <init-param>
      <param-name>out-of-control</param-name>
      <param-value>login i18n</param-value>
    </init-param>
  </filter>

  <filter-mapping>
    <filter-name>SecurityFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

</web-app>